  <style>
    body {
      background-color: #f3f4f6;
      margin: 0;
      padding: 0;
      padding-top: 70px; /* Espacio para el navbar fijo */
    }
    
    .navbar {
      box-shadow: 0 2px 5px rgba(0,0,0,0.05);
      background-color: #fff !important;
      padding: 0.75rem 1.5rem;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1030;
    }
    
    .navbar .nav-link {
      font-weight: 500;
      color: #475569;
      padding: 0.5rem 1rem;
    }
    
    .navbar .nav-link:hover {
      color: #4e8c8f;
    }
    
    .badge {
      padding: 0.35rem 0.65rem;
      font-weight: 500;
      font-size: 0.75rem;
    }
    
    .card {
      transition: transform 0.2s, box-shadow 0.2s;
      margin-bottom: 20px;
      height: 100%;
      border-radius: 18px;
      border: none;
      background-color: #fff;
      box-shadow: 0 3px 12px rgba(0,0,0,0.1);
    }
    
    .card:hover {
      transform: translateY(-6px);
      box-shadow: 0 10px 15px rgba(0,0,0,0.1);
    }
    
    .card-body {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      height: 100%;
      padding: 1.75rem 1.5rem;
      text-align: center;
    }
    
    .icon {
      font-size: 2.4rem;
      margin-bottom: 1.2rem;
      color: #4e8c8f;
      display: block;
    }
    
    .card-title {
      font-weight: 600;
      margin-bottom: 0.75rem;
      font-size: 1.2rem;
    }
    
    .card-text {
      color: var(--text-light);
      margin-bottom: 1.25rem;
      font-size: 0.95rem;
    }
    
    .section-title {
      position: relative;
      padding-left: 1rem;
      margin-bottom: 1.5rem;
      margin-top: 2rem;
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--text-dark);
      display: flex;
      align-items: center;
    }
    
    .section-title::before {
      content: "";
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 4px;
      background-color: #4e8c8f;
      border-radius: 4px;
    }
    
    .btn-access {
      margin-top: 0.75rem;
      border-radius: 18px;
      padding: 0.5rem 1.5rem;
      font-weight: 500;
      font-size: 0.9rem;
      letter-spacing: 0.5px;
      width: 100%;
      transition: all 0.3s ease;
    }
    
    .btn-access:hover {
      transform: translateY(-2px);
    }
    
    .btn-primary {
      background-color: #4e8c8f;
      border-color: #4e8c8f;
    }
    
    .btn-primary:hover {
      background-color: #66b3b7;
      border-color: #66b3b7;
    }
    
    .main-content {
      background-color: #f5f8fa;
      border-radius: 18px;
      padding: 1.75rem;
      margin-bottom: 1.5rem;
      box-shadow: 0 4px 32px rgba(0,0,0,0.1);
      clear: both;
      overflow: hidden;
    }
    
    .role-badge {
      position: absolute;
      top: 10px;
      right: 10px;
      padding: 0.25rem 0.5rem;
      border-radius: 50px;
      font-size: 0.7rem;
      font-weight: 600;
      text-transform: uppercase;
      background-color: #e6f7f8;
      color: #4e8c8f;
    }
    
    .dashboard-header {
      background-color: #fff;
      border-radius: 18px;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
      box-shadow: 0 3px 12px rgba(0,0,0,0.1);
    }
    
    .stats-counter {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 0;
      color: #4e8c8f;
    }
    
    .stats-label {
      color: #6b7280;
      font-size: 0.875rem;
      margin-bottom: 0;
    }
    
    /* Category-specific colors */
    .process-card .icon { color: #4e8c8f; }
    .admin-card .icon { color: #4e8c8f; }
    .format-card .icon { color: #4e8c8f; }
    .report-card .icon { color: #4e8c8f; }
    
    /* Estilos para tablas y grids */
    .table {
      width: 100%;
      margin-bottom: 1rem;
      color: #212529;
      border-collapse: collapse;
    }
    
    .table th {
      padding: 0.75rem;
      vertical-align: top;
      border-top: 1px solid #dee2e6;
      background-color: #f8f9fa;
      font-weight: 600;
    }
    
    .table td {
      padding: 0.75rem;
      vertical-align: top;
      border-top: 1px solid #dee2e6;
    }
    
    .table-responsive {
      display: block;
      width: 100%;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }
    
    /* Ajuste para grid sistema */
    .row {
      display: flex;
      flex-wrap: wrap;
      margin-right: -12px;
      margin-left: -12px;
      clear: both;
    }
    
    .col, .col-1, .col-2, .col-3, .col-4, .col-5, .col-6, .col-7, .col-8, .col-9, .col-10, .col-11, .col-12, 
    .col-md-1, .col-md-2, .col-md-3, .col-md-4, .col-md-5, .col-md-6, .col-md-7, .col-md-8, .col-md-9, .col-md-10, .col-md-11, .col-md-12 {
      position: relative;
      width: 100%;
      padding-right: 12px;
      padding-left: 12px;
    }
  </style>
</head>
