    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header" style="background-color: #4e8c8f; color: white;">
          <h5 class="modal-title" id="formatoRegistroModalLabel">
            <i class="fas fa-clipboard-list me-2"></i> Formato Registro
          </h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i> Selecciona un SKU para acceder al formato de registro correspondiente.
          </div>
          <div class="mb-3">
            <label for="skuRegistroSelect" class="form-label">Selecciona un SKU:</label>
            <select class="form-select form-select-lg" id="skuRegistroSelect">
              <option value="" selected disabled>Cargando SKUs...</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="button" class="btn btn-primary" id="btnAccederRegistro">
            <i class="fas fa-arrow-right me-1"></i> Acceder al formato
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal para seleccionar SKU de Formato General -->
  <div class="modal fade" id="formatoGeneralModal" tabindex="-1" aria-labelledby="formatoGeneralModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header" style="background-color: #4e8c8f; color: white;">
          <h5 class="modal-title" id="formatoGeneralModalLabel">
            <i class="fas fa-cogs me-2"></i> Formato General
          </h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i> Selecciona un SKU para acceder al formato general correspondiente.
          </div>
          <div class="mb-3">
            <label for="skuGeneralSelect" class="form-label">Selecciona un SKU:</label>
            <select class="form-select form-select-lg" id="skuGeneralSelect">
              <option value="" selected disabled>Cargando SKUs...</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="button" class="btn btn-primary" id="btnAccederGeneral">
            <i class="fas fa-arrow-right me-1"></i> Acceder al formato
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal para seleccionar SKU de Formato Empaque -->
  <div class="modal fade" id="formatoEmpaqueModal" tabindex="-1" aria-labelledby="formatoEmpaqueModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header" style="background-color: #4e8c8f; color: white;">
          <h5 class="modal-title" id="formatoEmpaqueModalLabel">
            <i class="fas fa-box-open me-2"></i> Formato Empaque
          </h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i> Selecciona un SKU para acceder al formato de empaque correspondiente.
          </div>
          <div class="mb-3">
            <label for="skuEmpaqueSelect" class="form-label">Selecciona un SKU:</label>
            <select class="form-select form-select-lg" id="skuEmpaqueSelect">
              <option value="" selected disabled>Cargando SKUs...</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="button" class="btn btn-primary" id="btnAccederEmpaque">
            <i class="fas fa-arrow-right me-1"></i> Acceder al formato
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Función para cargar los SKUs disponibles en todos los selectores
    function cargarSKUs() {
      fetch('/api/catalogos/skus')
        .then(response => {
          if (!response.ok) {
            throw new Error('Error al obtener los SKUs');
          }
          return response.json();
        })
        .then(skus => {
          const selectores = ['skuRegistroSelect', 'skuGeneralSelect', 'skuEmpaqueSelect'];
          
          selectores.forEach(selectorId => {
            const select = document.getElementById(selectorId);
            select.innerHTML = '<option value="" selected disabled>Selecciona un SKU</option>';
            
            skus.forEach(sku => {
              const option = document.createElement('option');
              option.value = sku.nombre;
              option.textContent = `${sku.nombre}${sku.skuItem ? ' - ' + sku.skuItem : ''}`;
              select.appendChild(option);
            });
          });
        })
        .catch(error => {
          console.error('Error:', error);
          const selectores = ['skuRegistroSelect', 'skuGeneralSelect', 'skuEmpaqueSelect'];
          selectores.forEach(selectorId => {
            document.getElementById(selectorId).innerHTML = 
              '<option value="" selected disabled>Error al cargar SKUs</option>';
          });
        });
    }

    // Configurar los botones de acceso a formatos
    document.getElementById('btnAccederRegistro').addEventListener('click', function() {
      const skuSelect = document.getElementById('skuRegistroSelect');
      if (skuSelect.value) {
        window.location.href = `/formato_registro/${skuSelect.value}`;
      } else {
        alert('Por favor selecciona un SKU');
      }
    });

    document.getElementById('btnAccederGeneral').addEventListener('click', function() {
      const skuSelect = document.getElementById('skuGeneralSelect');
      if (skuSelect.value) {
        window.location.href = `/formato_general/${skuSelect.value}`;
      } else {
        alert('Por favor selecciona un SKU');
      }
    });

    document.getElementById('btnAccederEmpaque').addEventListener('click', function() {
      const skuSelect = document.getElementById('skuEmpaqueSelect');
      if (skuSelect.value) {
        window.location.href = `/formato_empaque/${skuSelect.value}`;
      } else {
        alert('Por favor selecciona un SKU');
      }
    });

    // Cargar los SKUs cuando se abren los modales
    const modales = [
      document.getElementById('formatoRegistroModal'),
      document.getElementById('formatoGeneralModal'),
      document.getElementById('formatoEmpaqueModal')
    ];

    modales.forEach(modal => {
      modal.addEventListener('show.bs.modal', function() {
        cargarSKUs();
      });
    });
  </script>
  
  <%- include('partials/allScripts.ejs') %>
</body>
</html>
